@model IEnumerable<Book>

@{
    ViewData["Title"] = "List of Books";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style ="max-width: 540px">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    Movie Name
                                    <a class="text-white float-left"><i class="bi bi-pencil-square"></i></a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.Image" width="100%" alt="@item.Name">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text"><b>Description: </b>@item.Description</p>
                            <p class="card-text"><b>Publication: </b>@item.Publication.Name</p>
                            <p class="card-text"><b>Book Category: </b>@item.bookCategory</p>
                            <p class="card-text"><b>Quantity: </b>@item.Quantity</p>
                            <b>Status:</b>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-left"><i class="bi-eye-fill"></i>Show Details</a>
                                <a class="btn btn-success text-white"><i class="bi bi-cart-plus"></i>Add To Cart ($c.cc)</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>